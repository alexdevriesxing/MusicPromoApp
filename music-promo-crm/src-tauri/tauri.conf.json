{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Music Promo CRM",
  "version": "1.0.0",
  "identifier": "com.promobase.app",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PromoBase",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "msi",
      "appimage",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png"
    ],
    "resources": []
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:promobase.db"]
    }
  }
}
